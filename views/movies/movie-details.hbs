<div class="container"> 
    
    <h2>Details for {{title}}</h>

    <h3>Genre: {{genre}}</h3> 
    <br>
    <p>Plot: {{plot}}</p>
    <br>
    {{#each cast}}
    <h3>{{name}}</h3>
    <br>
    <p>Occupation: {{occupation}}</p>
    <br>
    <p>Catch phrase: {{catchPhrase}}</p>
    <br>
    <span> 
        <img src="{{imageUrl}}" alt="Celebrity picture">
    </span>


    {{/each}}

    <div class="d-grid d-md-flex mb-1 justify-content-center">
        <form action="/movies/{{id}}/delete" method="POST" >
            <button class="btn btn-danger">Eliminar</button>
        </form>
    </div>
    <div class="d-grid d-md-flex mb-5 justify-content-center">
        <button class="btn btn-danger"><a href="/movies">Go back</a></button>
    </div>    
    
</div>
