<div class="container">

    <h2>{{name}}</h2>
    <br>
    <p>Occupation: {{occupation}}</p>
    <br>
    <p>Catch phrase: {{catchPhrase}}</p>
    <br>
    <span class="celeb-details"> 
        <img  src="{{imageUrl}}" alt="Celebrity picture">
    </span>
    <br>
    <div class="d-grid d-md-flex mb-1 justify-content-center">
        <form class="form" action="/celebrities/{{id}}/delete" method="POST" >
            <button class="btn btn-danger ">Eliminar</button>
        </form>
    </div>
    <div class="d-grid d-md-flex mb-5 justify-content-center">
        <button class="btn btn-danger"><a href="/celebrities">Go back</a></button>
    </div>      
</div>